<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="mb-4"><%= t('feedback.title') %></h1>

      <%= form_with url: feedback_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, t('feedback.name'), class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, t('feedback.email'), class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :message, t('feedback.message'), class: "form-label" %>
          <%= f.text_area :message, rows: 5, class: "form-control" %>
        </div>

        <%= f.submit t('feedback.submit'), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
