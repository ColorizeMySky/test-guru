<%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |form| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= form.label :first_name, 'Имя' %><br />
    <%= form.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :last_name, 'Фамилия' %><br />
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> символов минимум)</em>
    <% end %><br />
    <%= form.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= form.submit "Зарегистрироваться" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
