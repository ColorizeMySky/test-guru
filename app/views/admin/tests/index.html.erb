<h1><%= t('.title') %></h1>

<%= render 'admin/shared/errors', resource: @test %>

<table  class="table table-striped">
  <thead>
    <tr>
      <th class="sort-by-title" role="button">
        <%= t('activerecord.attributes.test.name') %>
        <%= octicon 'arrow-up', class: 'text-success d-none' %>
        <%= octicon 'arrow-down', class: 'text-succes d-none' %>
      </th>
      <th><%= t('activerecord.attributes.test.level') %></th>
      <th><%= t('tests.test.questions_count', count: 0) %></th>
      <th><%= t('actions') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @tests %>
  </tbody>
</table>

<div>
  <%= link_to t('.new_test'), new_admin_test_path %>
</div>
