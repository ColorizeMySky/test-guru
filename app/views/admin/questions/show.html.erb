<h1 class="mb-4">Вопрос: <%= @question.text %></h1>

<p><strong>Тест:</strong> <%= @question.test.name %></p>

<h2 class="mt-4 mb-3">Варианты ответов:</h2>
<ul class="list-group mb-4">
  <% @question.answers.each do |answer| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= answer.answer_text %>
      <% if answer.is_correct %>
        <span class="badge badge-success badge-pill">Верно</span>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'Назад', :back, class: 'btn btn-secondary' %>
