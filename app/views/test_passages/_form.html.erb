<%= form_with model: @test_passage, local: true, method: :put, class: 'mb-3' do |form| %>
  <div class="form-group">
    <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :answer_text do |cb| %>
      <div class="form-check">
        <%= cb.check_box %>
        <%= cb.label %>
      </div>
    <% end %>

    <div><%= form.submit "Далее", class: 'btn btn-primary' %></div>
  </div>
<% end %>
