<%= form_with model: @test_passage, local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :answer_text do |cb| %>
    <p>
      <%= cb.check_box %>
      <%= cb.label %>
    </p>
  <% end %>

  <p><%= form.submit "Далее" %></p>
<% end %>
